@page "/bill"

<MudFileUpload T="IReadOnlyList<IBrowserFile>"
               Accept="@AcceptedFileTypes"
               FilesChanged="UploadFiles"
               MaximumFileCount="@MaximumFileCount">
    <ActivatorContent>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Dark"
                   StartIcon="@Icons.Material.Filled.CloudUpload"
                   Style="margin:auto;display:block;width:220px;">
            Upload Files
        </MudButton>
    </ActivatorContent>
</MudFileUpload>

<MudTable Items="@_files.Take(MaximumFileCount)" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>File name</MudTh>
        <MudTh>Size (MB)</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Size">@context.Size</MudTd>
    </RowTemplate>
</MudTable>
