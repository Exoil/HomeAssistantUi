@page "/bill"

<MudFileUpload T="IReadOnlyList<IBrowserFile>" Accept="@AcceptedFileTypes" FilesChanged="UploadFiles" MaximumFileCount="@MaximumFileCount">
    <ActivatorContent>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.CloudUpload">
        </MudButton>
    </ActivatorContent>
</MudFileUpload>


@if (_files.Count > 0)
{
    <MudText Typo="@Typo.h6">@_files.Count() File@(_files.Count() == 1 ? "" : "s"):</MudText>
    <MudList T="string">
        @foreach (var file in _files)
        {
            <MudListItem Icon="@Icons.Material.Filled.AttachFile" @key="@file">
                @file.Name <code>@file.Size bytes</code>
            </MudListItem>
        }
    </MudList>
}

